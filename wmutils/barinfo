#!/usr/bin/env rc
while(true){
	echo -n ' brightness:' `{cat /sys/class/backlight/radeon_bl0/brightness} '  |   '
	echo -n 'battery:' `{acpi | field 4 | sed 's/,$//'} '  |   '
	echo -n 'date:' `{date +'%Y-%m-%d'} '  |   '
	echo -n 'time:' `{date +'%H:%M:%S'} '  |   '
	echo -n 'metrictime:' `{echo '('`{date +'%H'}'*3600+' `{date +'%M'}'*60+' `{date +'%S'} ')/86.4' | bc} '  |   '
	echo -n 'usedram:' `{free -h | sed '1d; $d' | field 3} '  |   '
	echo 'load:' `{cat /proc/loadavg | field 1}
}
