#!/usr/bin/env rc

#this script is not good because when rc receives sigint in `{read}, it crashes with a segfault.

fn die{
	kill $tp
	exit 2
}

fn sigint{die}; fn sighup{die}; fn sigalrm{die}; fn sigfpe{die}; fn sigkill {die}; fn sigterm{die}

if(! ~ $#* 2){
	echo 'wrm out in' >[1=2]
	exit 1
}

tail -f $1 &

tp=$apid

while(true){
	printf '= '
	l=`{read}
	if(test -n $l){
		echo $l | sed 's/^/self: /' >> $1
		echo $l >$2
	}
	if(test -z $l)
		break
}

kill $tp
