#!/usr/bin/env rc

switch($#*){
case '0'
	win=`{pfw}
case '1'
	win=$1
case *
	echo 'cnt [win]' >[1=2]
	exit 1
}

if(~ $win ''){
	echo 'No focused window found, exiting' >[1=2]
	exit 2
}

rwid=`{wattr w `{lsw -r}}
rhgt=`{wattr h `{lsw -r}}
cwid=`{wattr w $win}
chgt=`{wattr h $win}

wtp `{echo '('$rwid'/2)-(('$cwid'+2*'$BW')/2)' | bc} `{echo '('$rhgt'/2)-(('$chgt'+2*'$BW')/2)' | bc} `{wattr w $win} `{wattr h $win} $win
