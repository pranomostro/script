#!/usr/bin/env rc

cd /mnt/backup

name=`{date +'%Y%m%d'.tar.gz}
last=`{stat --format'=%Y %n' * | sort -n | sed -n '$s/[0-9]\+ //; $p'}

if(test -f $name -o -d /mnt/backup/tmp)
	exit 0

mkdir tmp

if(~ `{date +'%d'} '01')
	cp -r /home/adrian/* tmp
if not
	cgdc $last /home/adrian tmp

tar -czf $name tmp/
rm -rf tmp
