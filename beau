#!/usr/bin/env rc

fn gr{
	echo 'gr=1.6180339887; gr*'$1 | bc | sed 's/\..*$//'
}

switch($#*){
case '0'
	win=`{pfw}
	y=`{wattr 'h' $win}
	x=`{gr $y}
case '2'
	win=$2
	switch($1){
	case 'w'
		x=`{wattr 'w' $win}
		y=`{gr $x}
	case 'h'
		y=`{wattr 'h' $win}
		x=`{gr $y}
	case *
		echo $1' is not w or h, exiting' >[1=2]
		exit 2
	}
case *
	echo 'beau [w|h] [WIN]' >[1=2]
	exit 1
}

if(~ $win ''){
	echo 'No focused window found, exiting' >[1=2]
	exit 3
}

wtp `{wattr x $win} `{wattr y $win} $x $y $win
